{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "typecheck": {
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "dev": {
      "persistent": true
    },
    "lint": {},
    "test": {
      "persistent": true
    },
    "test:ci": {},
    "//#format": {
      "cache": false
    },
    "//#format:staged": {
      "cache": false
    },
    "precommit": {
      "dependsOn": ["//#format:staged", "^lint", "^test:ci"]
    }
  },
  "globalEnv": ["ORVAL_DEBUG_FILTER", "CI", "DEBUG"]
}
